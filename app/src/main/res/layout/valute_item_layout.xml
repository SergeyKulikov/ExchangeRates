<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tvID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/space8"
        app:layout_constraintStart_toEndOf="@+id/tvNumCode"
        app:layout_constraintTop_toBottomOf="@+id/tvName"
        tools:text="ID" />

    <TextView
        android:id="@+id/tvNumCode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/space8"
        tools:text="000"
        app:layout_constraintEnd_toEndOf="@+id/tvCharCode"
        app:layout_constraintStart_toStartOf="@+id/tvCharCode"
        app:layout_constraintTop_toBottomOf="@+id/tvCharCode" />

    <TextView
        android:id="@+id/tvCharCode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/space8"
        tools:text="RUR"
        app:layout_constraintStart_toEndOf="@+id/tvNominal"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvNominal"
        android:layout_width="40dp"
        android:layout_height="wrap_content"
        android:padding="@dimen/space8"
        tools:text="1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:padding="@dimen/space8"
        tools:text="name"
        app:layout_constraintEnd_toStartOf="@+id/tvPrevious"
        app:layout_constraintStart_toEndOf="@+id/tvCharCode"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/space8"
        tools:text="45.2356"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvPrevious" />

    <TextView
        android:id="@+id/tvPrevious"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/space8"
        tools:text="44.2354"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvCountryList"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:padding="@dimen/space8"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvID"
        style="@style/TextAppearance.AppCompat.Body1"
        tools:text="Country list" />
</androidx.constraintlayout.widget.ConstraintLayout>